<EnquiryFormScreen>:
    name: 'enquiry_form'
    
    MDBoxLayout:
        id: boxcad
        orientation: 'vertical'
        
        MDTopAppBar:
            title: 'Enquiry Form'
            pos_hint: {"top": 1}
            left_action_items: [["arrow-left", lambda x: setattr(app.root, 'current', 'main')]]
            elevation: 10
        
        ScrollView:
            #size_hint_y: .73
            #pos_hint: {'x':0, 'y': .11}
            #do_scroll_x: False
            #do_scroll_y: True
            size_hint: 1, None           #for width size
            height: root.height * 0.92   #for scrollview height
            effect_cls: 'ScrollEffect'   #prevent user scrolling to see whats behind the scrollview

            BoxLayout:
                id: enquiry
                orientation: 'vertical'
                size_hint_y: None
                height: dp(650)          #for enquries list height size
                padding: dp(8)
                spacing: dp(8)
                
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 1       # for textfield width control
                    spacing: '5dp'
                    #padding: '5dp'
                    
                    
                    MDTextField:
                        id: parent_name
                        hint_text: 'Enter parent name'
                        mode: "rectangle"
    
                    MDTextField:
                        id: student_name
                        hint_text: 'Enter student name'
                        mode: "rectangle"
    
                    MDTextField:
                        id: class_name
                        hint_text: 'Enter class'
                        mode: "rectangle"
    
                    MDTextField:
                        id: address
                        hint_text: 'Enter address'
                        mode: "rectangle"
    
                    MDTextField:
                        id: phone_number1
                        max_text_length: 10
                        hint_text: 'Enter phone number 1'
                        mode: "rectangle"

    
                    MDTextField:
                        id: phone_number2
                        max_text_length: 10
                        hint_text: 'Enter phone number 2'
                        mode: "rectangle"
                        helper_text_mode: "on_error"


                    MDTextField:
                        id: other_details
                        hint_text: 'Other Details'
                        mode: "rectangle"
                        multiline: True
                        size_hint_y: None
                        height: self.minimum_height if self.minimum_height > root.height * 0.1 else root.height * 0.1
                        on_text_validate: self.height = self.minimum_height if self.minimum_height > root.height * 0.1 else root.height * 0.1
                    MDTextField:
                        id: follow_date
                        validator: "date"
                        hint_text: 'Follow_Up_Date'
                        helper_text: " dd/mm/yyyy "
                        date_format: "dd/mm/yyyy"  # Define your desired date format here
                        mode: "rectangle"

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: '48dp'
                        padding: '10dp'
                        spacing: '10dp'
                        pos_hint: {'center_x': 0.5}

                        MDLabel:
                            id: admission
                            text: 'Admission Status:'

                        MDDropDownItem:
                            id: drop_item
                            #pos_hint: {'center_x': .5, 'center_y': .5}
                            text: 'enquiry'
                            on_release: root.menu.open()

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: '48dp'
                        padding: '10dp'
                        spacing: '10dp'
                        pos_hint: {'center_x': 0.65}
                                                    
        
                        MDRaisedButton:
                            text: 'Submit'
                            on_release: root.submit_form()

                        
                        MDRaisedButton:
                            text: 'Reset'                            
                            on_press: root.reset_form()

                        


